---
const metrics = [
  { value: '100', label: 'Quality control for every production batch', symbol: '%' },
  { value: '40', label: 'Reduced abrasive material consumption thanks to advanced technology', symbol: '%' },
  { value: '95', label: 'Machines operating without failure during the first 2 years', symbol: '%' },
];
---

<section class="bg-gray-100 py-16">
  <div class="container mx-auto px-4">
    <div class="flex flex-col md:flex-row justify-between items-center md:items-start space-y-12 md:space-y-0">
      {metrics.map((metric) => (
        <div class="text-center md:w-1/3">
          <div class="flex items-baseline justify-center">
            <span class="text-7xl font-bold text-green-700">{metric.value}</span>
            <span class="text-5xl font-bold text-green-700 ml-1">{metric.symbol}</span>
          </div>
          <p class="mt-4 text-lg font-semibold text-gray-700 max-w-[200px] mx-auto">{metric.label}</p>
        </div>
      ))}
    </div>
  </div>
</section>
