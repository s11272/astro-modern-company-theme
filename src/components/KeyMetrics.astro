---
import { getLangFromUrl } from "../i18n/utils";
import { ui } from "../i18n/ui";

const lang = getLangFromUrl(Astro.url);
const t = ui[lang];
const metrics = t.keyMetrics.items;
---

<section class="bg-[var(--key-metrics-bg)] py-16">
  <div class="container mx-auto px-4">
    <div
      class="flex flex-col md:flex-row justify-between items-center md:items-start space-y-12 md:space-y-0"
    >
      {
        metrics.map((metric) => (
          <div class="text-center md:w-1/3">
            <div class="flex items-baseline justify-center">
              <span class="text-7xl font-bold text-[var(--key-metrics-value-text)]">
                {metric.value}
              </span>
              <span class="text-5xl font-bold text-[var(--key-metrics-value-text)] ml-1">
                {metric.symbol}
              </span>
            </div>
            <p class="mt-4 text-lg font-semibold text-[var(--key-metrics-label-text)] max-w-[200px] mx-auto">
              {metric.label}
            </p>
          </div>
        ))
      }
    </div>
  </div>
</section>
