---
import { Image } from "astro:assets";
import logoImg from "../assets/logo.png";
import { ui } from "../i18n/ui";
import { getLangFromUrl } from "../i18n/utils";

const lang = getLangFromUrl(Astro.url);
const t = ui[lang];

const footerLinks = [
  { label: t.nav.products, href: "#products" },
  { label: t.nav.services, href: "#services" },
  { label: t.nav.partners, href: "#partners" },
  { label: t.nav.testimonials, href: "#testimonials" },
  { label: t.nav.contactUs, href: "#contact" },
];
---

<footer class="bg-[var(--footer-bg)] text-[var(--footer-text)] py-12">
  <div class="container mx-auto px-4">
    <div class="grid grid-cols-1 md:grid-cols-3 gap-8 mb-8">
      <div>
        <Image
          src={logoImg}
          alt="Company Logo Image"
          class="rounded-lg"
          width={48}
          height={48}
        />
        <p class="font-serif font-bold pt-2 text-xl">{t.footer.companyName}</p>
        <p class="text-sm pt-2">{t.footer.companyTagline}</p>
      </div>
      <div>
        <h3 class="text-lg font-semibold mb-4">{t.footer.quickLinks}</h3>
        <ul class="space-y-2">
          {
            footerLinks.map((link) => (
              <li>
                <a
                  href={link.href}
                  class="text-sm hover:text-[var(--footer-link-hover)]"
                >
                  {link.label}
                </a>
              </li>
            ))
          }
        </ul>
      </div>
      <div>
        <h3 class="text-lg font-semibold mb-4">{t.footer.stayConnected}</h3>
        <p class="text-sm mb-4">{t.footer.subscribeHint}</p>
        <form class="flex">
          <input
            type="email"
            placeholder={t.footer.emailPlaceholder}
            class="flex-grow rounded-l-md px-4 py-2 text-[var(--footer-subscribe-input-text)] focus:outline-none focus:ring-2 focus:ring-[var(--footer-subscribe-button-bg)]"
          />
          <button
            type="submit"
            class="bg-[var(--footer-subscribe-button-bg)] text-[var(--footer-subscribe-button-text)] px-4 py-2 rounded-r-md hover:bg-[var(--footer-subscribe-button-hover-bg)] focus:outline-none focus:ring-2 focus:ring-[var(--footer-subscribe-button-bg)] focus:ring-offset-2"
          >
            {t.footer.subscribeCta}
          </button>
        </form>
      </div>
    </div>
    <div
      class="border-t border-[var(--footer-border)] pt-8 flex flex-col md:flex-row justify-between items-center"
    >
      <p class="text-sm mb-4 md:mb-0">
        &copy; 2024 {t.footer.companyName}. {t.footer.copyright}
      </p>
      <div class="flex space-x-4">
        <a
          href="https://www.linkedin.com/company/yourcompany"
          target="_blank"
          rel="noopener noreferrer"
          class="text-[var(--footer-social-icon)] hover:text-[var(--footer-social-icon-hover)]"
        >
          <span class="sr-only">LinkedIn</span>
          <svg
            class="h-6 w-6"
            fill="currentColor"
            viewBox="0 0 24 24"
            aria-hidden="true"
          >
            <path
              fill-rule="evenodd"
              d="M19 0h-14c-2.761 0-5 2.239-5 5v14c0 2.761 2.239 5 5 5h14c2.762 0 5-2.239 5-5v-14c0-2.761-2.238-5-5-5zm-11 19h-3v-11h3v11zm-1.5-12.268c-.966 0-1.75-.79-1.75-1.764s.784-1.764 1.75-1.764 1.75.79 1.75 1.764-.783 1.764-1.75 1.764zm13.5 12.268h-3v-5.604c0-3.368-4-3.113-4 0v5.604h-3v-11h3v1.765c1.396-2.586 7-2.777 7 2.476v6.759z"
              clip-rule="evenodd"></path>
          </svg>
        </a>
        <a
          href="https://twitter.com/yourtwitter"
          target="_blank"
          rel="noopener noreferrer"
          class="text-[var(--footer-social-icon)] hover:text-[var(--footer-social-icon-hover)]"
        >
          <span class="sr-only">Twitter</span>
          <svg
            class="h-6 w-6"
            fill="currentColor"
            viewBox="0 0 24 24"
            aria-hidden="true"
          >
            <path
              d="M8.29 20.251c7.547 0 11.675-6.253 11.675-11.675 0-.178 0-.355-.012-.53A8.348 8.348 0 0022 5.92a8.19 8.19 0 01-2.357.646 4.118 4.118 0 001.804-2.27 8.224 8.224 0 01-2.605.996 4.107 4.107 0 00-6.993 3.743 11.65 11.65 0 01-8.457-4.287 4.106 4.106 0 001.27 5.477A4.072 4.072 0 012.8 9.713v.052a4.105 4.105 0 003.292 4.022 4.095 4.095 0 01-1.853.07 4.108 4.108 0 003.834 2.85A8.233 8.233 0 012 18.407a11.616 11.616 0 006.29 1.84"
            ></path>
          </svg>
        </a>
      </div>
    </div>
  </div>
</footer>
