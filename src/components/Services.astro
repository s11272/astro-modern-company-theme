---
import { Image } from 'astro:assets';
import { getLangFromUrl } from '../i18n/utils';
import { ui } from '../i18n/ui';

const lang = getLangFromUrl(Astro.url);
const t = ui[lang];

const services = t.servicesSection.items;
---

<section class="bg-[#222222] py-20">
  <div class="container mx-auto px-4">
    <h2 class="text-4xl font-serif font-bold text-center mb-12 text-[#84DCC6]">{t.servicesSection.title}</h2>
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
      {services.map((service) => (
        <div class="bg-[#4B4E6D] rounded-lg shadow-lg overflow-hidden">
          <div class="p-6">
            <h3 class="text-xl font-bold text-[#84DCC6] mb-2">{service.title}</h3>
            <p class="text-[#95A3B3]">{service.description}</p>
          </div>
        </div>
      ))}
    </div>
  </div>
</section>