---
import { Image } from "astro:assets";
import { getLangFromUrl } from "../i18n/utils";
import { ui } from "../i18n/ui";

const lang = getLangFromUrl(Astro.url);
const t = ui[lang];

const services = t.servicesSection.items;
---

<section class="bg-[var(--services-bg)] py-20">
  <div class="container mx-auto px-4">
    <h2
      class="text-4xl font-serif font-bold text-center mb-12 text-[var(--services-title-text)]"
    >
      {t.servicesSection.title}
    </h2>
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
      {
        services.map((service) => (
          <div class="bg-[var(--services-card-bg)] rounded-lg shadow-lg overflow-hidden">
            <div class="p-6">
              <h3 class="text-xl font-bold text-[var(--services-card-title)] mb-2">
                {service.title}
              </h3>
              <p class="text-[var(--services-card-description)]">
                {service.description}
              </p>
            </div>
          </div>
        ))
      }
    </div>
  </div>
</section>
