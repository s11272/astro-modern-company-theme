---
import { getLangFromUrl, useTranslations } from "../i18n/utils";
import { ui } from "../i18n/ui";

const lang = getLangFromUrl(Astro.url);
const t = ui[lang];
---

<section class="bg-[var(--contact-bg)] py-20">
  <div class="container mx-auto px-4">
    <div class="max-w-6xl mx-auto flex flex-col lg:flex-row gap-16">
      <div class="lg:w-1/3">
        <h2
          class="text-4xl font-serif font-bold text-[var(--contact-title-text)] mb-4"
        >
          {t.contact.title}
        </h2>
        <p class="text-xl text-[var(--contact-subtitle-text)]">
          {t.contact.subtitle}
        </p>
      </div>
      <div class="lg:w-2/3">
        <form class="space-y-6">
          <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
            <div>
              <label
                for="firstName"
                class="block text-sm font-medium text-[var(--contact-label-text)] mb-1"
                >{t.contact.firstName}*</label
              >
              <input
                type="text"
                id="firstName"
                name="firstName"
                required
                class="w-full px-3 py-2 border border-[var(--contact-input-border)] rounded-md shadow-sm focus:ring-[var(--contact-input-focus-ring)] focus:border-[var(--contact-input-focus-border)]"
              />
            </div>
            <div>
              <label
                for="lastName"
                class="block text-sm font-medium text-[var(--contact-label-text)] mb-1"
                >{t.contact.lastName}*</label
              >
              <input
                type="text"
                id="lastName"
                name="lastName"
                required
                class="w-full px-3 py-2 border border-[var(--contact-input-border)] rounded-md shadow-sm focus:ring-[var(--contact-input-focus-ring)] focus:border-[var(--contact-input-focus-border)]"
              />
            </div>
          </div>
          <div>
            <label
              for="workEmail"
              class="block text-sm font-medium text-gray-700 mb-1"
              >{t.contact.workEmail}*</label
            >
            <input
              type="email"
              id="workEmail"
              name="workEmail"
              required
              class="w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:ring-green-500 focus:border-green-500"
            />
          </div>
          <div>
            <label
              for="phoneNumber"
              class="block text-sm font-medium text-gray-700 mb-1"
              >{t.contact.phoneNumber}*</label
            >
            <input
              type="tel"
              id="phoneNumber"
              name="phoneNumber"
              required
              class="w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:ring-green-500 focus:border-green-500"
            />
          </div>
          <div>
            <label
              for="message"
              class="block text-sm font-medium text-gray-700 mb-1"
              >{t.contact.message}</label
            >
            <textarea
              id="message"
              name="message"
              rows="4"
              class="w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:ring-green-500 focus:border-green-500"
            ></textarea>
          </div>
          <div>
            <button
              type="submit"
              class="px-6 py-3 bg-[var(--contact-submit-bg)] text-[var(--contact-submit-text)] text-sm font-medium rounded-md hover:bg-[var(--contact-submit-hover-bg)] focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-[var(--contact-submit-focus-ring)]"
            >
              {t.contact.send}
            </button>
          </div>
        </form>
      </div>
    </div>
  </div>
</section>
