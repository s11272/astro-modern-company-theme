---
import { getLangFromUrl, useTranslations } from '../i18n/utils';
import { ui } from '../i18n/ui';

const lang = getLangFromUrl(Astro.url);
const t = ui[lang];

const steps = [
  {
    icon: `<svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-6 h-6">
      <path stroke-linecap="round" stroke-linejoin="round" d="M12 9v6m3-3H9m12 0a9 9 0 11-18 0 9 9 0 0118 0z" />
    </svg>`,
    description: t.howItWorks.steps[0].description
  },
  {
    icon: `<svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-6 h-6">
      <path stroke-linecap="round" stroke-linejoin="round" d="M9 12.75L11.25 15 15 9.75M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
    </svg>`,
    description: t.howItWorks.steps[1].description
  },
  {
    icon: `<svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-6 h-6">
      <path stroke-linecap="round" stroke-linejoin="round" d="M3.75 13.5l10.5-11.25L12 10.5h8.25L9.75 21.75 12 13.5H3.75z" />
    </svg>`,
    description: t.howItWorks.steps[2].description
  }
];
---

<section class="py-16 bg-gray-50">
  <div class="container mx-auto px-4">
    <h2 class="text-3xl font-bold text-center mb-12">{t.howItWorks.title}</h2>
    <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
      {steps.map((step, index) => (
        <div class="flex flex-col items-center text-center p-6 bg-white rounded-lg shadow-sm">
          <div class="w-12 h-12 flex items-center justify-center bg-blue-100 rounded-full mb-4 text-blue-600">
            <Fragment set:html={step.icon} />
          </div>
          <p class="text-gray-600">{step.description}</p>
        </div>
      ))}
    </div>
  </div>
</section>
